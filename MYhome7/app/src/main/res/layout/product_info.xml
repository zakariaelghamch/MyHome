<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginTop="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgproduct"
                android:layout_width="129dp"
                android:layout_height="393dp"
                android:paddingTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/nom_produit"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:paddingTop="40dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/priceA"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/price"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textColor="#1c2833" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                            android:visibility="invisible"
                        android:id="@+id/matierelabel"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Matière :"
                        android:textColor="#1b2631"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/matiere"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Coleur"
                        android:textColor="#1b2631"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/coleur"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text=" Heteur :"
                        android:textColor="#1b2631"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Heteur"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:text="Largeur :"
                        android:textColor="#1b2631"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/largeur"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Fabrication Et Normes :"
                        android:textColor="#1b2631"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fabr"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Garante :"
                        android:textColor="#1b2631"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/garantie"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/Stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 en stock"
                        android:textColor="#00FF00"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=" Commander en ligne, par téléphone ou dans nos magasins et payer à la livraison !"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="Pour toute information complémentaire, veuillez Appeler le 06 53 41 19 77 ou via PAGE FACEBOOK ou visitez notre Showroom au 34 Rue bn tofeil 25000 ,fes"
            android:textColor="#454545"
            android:textSize="16dp" />


    </LinearLayout>
    <Button
    android:id="@+id/ajout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="#ff4545"
    android:text="A J O U T E R  A U   P A N I E R" />
</RelativeLayout>