<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Commande"
    android:orientation="vertical"
    android:background="#F2F2F2">

        <TextView
            android:layout_marginLeft="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="23dp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:text="  VOTRE COMMANDE "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_round"
        android:layout_margin="10dp"
        >
        <ListView
            android:id="@+id/listeV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"/>
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:id="@+id/totale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" T O T A L E :"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Methode De Paiement "
            android:textSize="20dp"
            android:textStyle="bold" />
        <RadioGroup
            android:id="@+id/Mpaiment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:checked="true"
                android:id="@+id/PL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paiement Ã  la livraison " />

            <RadioButton
                android:id="@+id/PC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Paiement par carte  " />
        </RadioGroup>
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/bCommande"
            android:text="C O M M A N D E"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#2ECC71"/>
    </LinearLayout>

    </LinearLayout>